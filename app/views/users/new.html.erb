<h1>Register</h1>

<% form_for @user, :url => { :action => "create" } do |f| %>
  <% if @user.errors.any? %>
    <div id="errorExplanation">
      <h2>The following errors prohibited this form from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= render :partial => "form", :object => f %>
  <%= f.submit "Register" %>
<% end %>
